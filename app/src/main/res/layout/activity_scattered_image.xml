<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scatteredRelativeLayout"
    tools:context=".ScatteredImageActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/scatteredToolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"


        android:background="@color/colorPrimary"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        />

    <!--main-ui-->


    <LinearLayout
        android:id="@+id/scatteredinearLayout"
        android:layout_below="@id/scatteredToolBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="4dp"
        android:weightSum="10"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:scaleType="centerCrop"
            android:id="@+id/scatteredImageView"

            />


        <Button
            android:id="@+id/shareScatterImageButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:text="@string/Share"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:textColor="@android:color/white"

            />


    </LinearLayout>

</RelativeLayout>